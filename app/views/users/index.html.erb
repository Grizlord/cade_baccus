<% title "Users Admin" %>

<div class="users_index">
  <table>
    <tr>
      <th>Username</th>
      <th>Id</th>
      <th>Admin</th>
    </tr>
    <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.id %></td>
      <td>
        <%= form_for user do |f| %>
          <%= f.label :admin %>
          <%= f.check_box :admin %>
          <%= f.submit %>
        <% end %>
      </td>     
      <td>
        <%= link_to 'Delete User', user, :confirm => 'Are you sure?', :method => :delete %><br />
      </td>
    </tr>
    <% end %>
  </table><br />
  
  <%= link_to "Add User", signup_path %>
</div>

<div class="users_index">
  <h1>Songs Admin</h1>
  <% if can? :destroy, @song %>
    <table id="users_index">
      <tr>
        <th>Name</th>
      </tr>
      <% for song in @songs %>
      <tr>
        <td><%= song.name %></td>    
        <td><%= link_to 'Delete Song', song, :confirm => 'Are you sure?', :method => :delete %></td>
        <td><%= link_to "Song Info", song %></td>
      </tr>
      <% end %>
    </table>
  <% end %>
  
</div>