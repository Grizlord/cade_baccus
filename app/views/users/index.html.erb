<% title "Users Admin" %>

<table id="users_index">
  <tr>
    <th>Username</th>
    <th>Id</th>
    <th>Admin</th>
  </tr>
  <% for user in @users %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.id %></td>
    <td>
      <%= form_for user do |f| %>
        <%= f.label :admin %>
        <%= f.check_box :admin %>
        <%= f.submit %>
      <% end %>
    </td>     
    <td><%= link_to 'Delete User', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table><br />

<%= link_to "Add User", signup_path %>