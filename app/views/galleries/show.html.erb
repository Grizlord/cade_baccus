<% title @gallery.name %>

<div id="pictures">
  <% for picture in @gallery.pictures %>
    <div class="picture">
      <%= link_to(image_tag(picture.image_url(:thumb)), picture) %>
      <div class="name"><%= picture.name %></div>
      <div class="actions">
        <% if can? :update, @picture %>
        <%= link_to "edit", edit_picture_path(picture) %> |
        <% end %>
        <% if can? :destroy, @picture %>
        <%= link_to "remove", picture, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<p>
  <% if can? :create, @picture %>
  <%= link_to "Add a picture", new_picture_path(:gallery_id => @gallery) %> |
  <% end %>
  <% if can? :destroy, @gallery %>
  <%= link_to "Remove Gallery", @gallery, :confirm => 'Are you sure?', :method => :delete %> |
  <% end %>
  <%= link_to "Back to Galleries", galleries_path %>
</p>
