<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "jquery-ui-1.8.12.custom", "application", "inlineplayer", "flashblock" %>
    <%= javascript_include_tag :defaults, "jquery-1.5.1.min", "jquery-ui-1.8.12.custom.min", "jquery.rails.js", "application", "jquery.hashchange.min.js", "jquery.easytabs.min.js", "soundmanager2", "inlineplayer" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="logo">
    <%= link_to image_tag("/images/logo.png"), root_path %>
    </div>
    <div id="tab_container" class="nav">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Gigs", shows_path %></li>
        <li><%= link_to "Pictures", galleries_path %></li>
        <li><%= link_to "Music", songs_path %></li>
        <% if can? :destroy, @user %>
        <li><%= link_to "Users Admin", users_path %></li>
        <% end %>
      </ul>
    </div>
    <div class="clear"></div>
    <div id="container">
      <div>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </div>
    </div>
    <p id="auth" class="hidden">
      <% if logged_in? %>
        Welcome <%= current_user.username %>! Not you?
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Admin Log In", login_path %>
      <% end %>
    </p>
  </body>
</html>
