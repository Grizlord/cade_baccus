<% title "Contacts" %>

<table id="contact">
  <tr>
    <th>From</th>
    <th>Email</th>
    <th>Message</th>
    <th></th>
  </tr>
  <% for contact in @contacts %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.message %></td>
      <% if can? :destroy, @contact %>
      <td><%= link_to "Delete", contact, :confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
</table>